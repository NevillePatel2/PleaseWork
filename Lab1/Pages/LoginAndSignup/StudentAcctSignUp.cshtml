@page
@model Lab1.Pages.LoginAndSignup.StudentAcctSignUpModel
@{
    ViewData["Title"] = "Student Signup";
}

<style>
    body {
        background-color: #DACCE6;
        font-family: Arial, sans-serif;
    }

    h3 {
        text-align: center;
        margin-top: 10px;
        margin-bottom: 30px;
        color: #472b7f;
        font-weight: bold;
    }

    form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0px 0px 20px #888888;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #472b7f;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: none;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        border: none;
        border-radius: 5px;
        background-color: #472b7f;
        color: #fff;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        input[type="submit"]:hover {
            background-color: #472b7f;
        }

    button {
        background-color: #472b7f;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>
<br />

<form method="post" asp-page="DisplayName">
    <h3>Student Signup</h3>
    <div class="form-group">
    <label for="FirstName">First Name:</label>
    <input type="text" id="FirstName" asp-for="FirstName" placeholder="Enter First Name" required />
    </div>
    
    <div class="form-group">
    <label for="LastName">Last Name:</label>
    <input type="text" id="LastName" asp-for="LastName" placeholder="Enter Last Name" required />
    </div>
    <div class="form-group">
    <label for="Username">Username:</label>
    <input type="text" id="Username" asp-for="Username" placeholder="Enter Username" required />
    </div>
    <div class="form-group">
    <label for="Password">Password:</label>
    <input type="password" id="Password" asp-for="Password" placeholder="Enter Password" required />
    </div>
    <div class="form-group">
    <label for="Email">Email:</label>
    <input type="email" id="Email" asp-for="Email" placeholder="Enter Email" required />
    </div>
    <div class="form-group">
    <label for="PhoneNumber">Phone Number:</label>
    <input type="text" id="PhoneNumber" asp-for="PhoneNumber" placeholder="Enter Phone Number" required />
    </div>
    <div class="form-group">
    <label for="Major">Major:</label>
    <input type="text" id="Major" asp-for="Major" placeholder="Enter Major" required />
    </div>
     <button type="submit" class="btn btn-primary" name="button" value="submit">Create Account</button>             
        <button type="submit" class="btn btn-outline-primary" name="button" value="populate" formnovalidate>Populate</button>
        <button type="submit" class="btn btn-outline-primary" name="button" value="clear" formnovalidate>Clear</button>
    </form>